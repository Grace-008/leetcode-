⭕️暴力解法

class Solution:
    def peakIndexInMountainArray(self, arr: List[int]) -> int:
        n=len(arr)
        i=0
        while i<n-1:
            if arr[i]>arr[i+1]:
                return i
            i+=1
        return n-1
        
 ⭕️二分查找
 class Solution:
    def peakIndexInMountainArray(self, arr: List[int]) -> int:
        left,right=0,len(arr)-1
        #比较中间值和中间值+1的值
        while left<right:
            mid=left+(right-left)//2
            #爬坡，排除左边区间
            if arr[mid]<arr[mid+1]:
                left=mid+1
            #下坡，排除右边区间
            else:
                right=mid
        return left
