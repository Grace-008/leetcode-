class Solution:
    def canPartition(self, nums: List[int]) -> bool:
        total = sum(nums)

        if total % 2 != 0:
            return False

        target = total // 2
        dp = [False] * (target + 1)
        dp[0] = True

        for i in range(len(nums)):
            for j in range(target, nums[i]-1, -1):  # Starting from target and going backwards to avoid double counting
                dp[j] = dp[j] or dp[j-nums[i]]

        return dp[-1]







