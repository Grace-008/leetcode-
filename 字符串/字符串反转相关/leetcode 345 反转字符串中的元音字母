class Solution:
    @staticmethod
    def reverseVowels(s: str) -> str:
        s = list(s)
        left, right = 0, len(s) - 1
        while left < right:
            while left < right and not Solution.isVowel(s[left]):
                left += 1
            while left < right and not Solution.isVowel(s[right]):
                right -= 1
            s[left], s[right] = s[right], s[left]
            left += 1
            right -= 1
        return "".join(s)

    @staticmethod
    def isVowel(char):
        vowels = ['a', 'e', 'i', 'o', 'u']
        if char.lower() in vowels:
            return True
        else:
            return False
